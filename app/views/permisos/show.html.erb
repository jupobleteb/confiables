<%- model_class = Permiso -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:permisos_id) %>:</strong></dt>
  <dd><%= @permiso.permisos_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo) %>:</strong></dt>
  <dd><%= @permiso.tipo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripcion) %>:</strong></dt>
  <dd><%= @permiso.descripcion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:perfil_id) %>:</strong></dt>
  <dd><%= @permiso.perfil_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              permisos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_permiso_path(@permiso), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              permiso_path(@permiso),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
