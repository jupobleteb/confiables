<%= form_for @permiso, :html => { :class => "form-horizontal permiso" } do |f| %>

    <% if @permiso.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@permiso.errors.count, "error") %> prohibited this permiso from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @permiso.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :permisos_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :permisos_id, :class => 'form-control' %>
    </div>
    <%= error_span(@permiso[:permisos_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :tipo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tipo, :class => 'form-control' %>
    </div>
    <%= error_span(@permiso[:tipo]) %>
  </div>
  <div class="control-group">
    <%= f.label :descripcion, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :descripcion, :class => 'form-control' %>
    </div>
    <%= error_span(@permiso[:descripcion]) %>
  </div>
  <div class="control-group">
    <%= f.label :perfil_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :perfil_id, :class => 'form-control' %>
    </div>
    <%= error_span(@permiso[:perfil_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            permisos_path, :class => 'btn btn-default' %>

<% end %>
