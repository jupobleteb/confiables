<%= form_for @habilidad, :html => { :class => "form-horizontal habilidad" } do |f| %>

    <% if @habilidad.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@habilidad.errors.count, "error") %> prohibited this habilidad from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @habilidad.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :habilidad_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :habilidad_id, :class => 'form-control' %>
    </div>
    <%= error_span(@habilidad[:habilidad_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :nombre, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nombre, :class => 'form-control' %>
    </div>
    <%= error_span(@habilidad[:nombre]) %>
  </div>
  <div class="control-group">
    <%= f.label :descripcion, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :descripcion, :class => 'form-control' %>
    </div>
    <%= error_span(@habilidad[:descripcion]) %>
  </div>
  <div class="control-group">
    <%= f.label :usuario_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :usuario_id, :class => 'form-control' %>
    </div>
    <%= error_span(@habilidad[:usuario_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            habilidades_path, :class => 'btn btn-default' %>

<% end %>
