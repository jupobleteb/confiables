<%- model_class = Perfil -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:perfil_id) %>:</strong></dt>
  <dd><%= @perfil.perfil_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @perfil.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripcion) %>:</strong></dt>
  <dd><%= @perfil.descripcion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:usuario_id) %>:</strong></dt>
  <dd><%= @perfil.usuario_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:permisos_id) %>:</strong></dt>
  <dd><%= @perfil.permisos_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              perfiles_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_perfil_path(@perfil), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              perfil_path(@perfil),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
