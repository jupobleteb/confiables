<%= form_for @perfil, :html => { :class => "form-horizontal perfil" } do |f| %>

    <% if @perfil.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@perfil.errors.count, "error") %> prohibited this perfil from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @perfil.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :perfil_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :perfil_id, :class => 'form-control' %>
    </div>
    <%= error_span(@perfil[:perfil_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :nombre, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nombre, :class => 'form-control' %>
    </div>
    <%= error_span(@perfil[:nombre]) %>
  </div>
  <div class="control-group">
    <%= f.label :descripcion, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :descripcion, :class => 'form-control' %>
    </div>
    <%= error_span(@perfil[:descripcion]) %>
  </div>
  <div class="control-group">
    <%= f.label :usuario_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :usuario_id, :class => 'form-control' %>
    </div>
    <%= error_span(@perfil[:usuario_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :permisos_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :permisos_id, :class => 'form-control' %>
    </div>
    <%= error_span(@perfil[:permisos_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            perfiles_path, :class => 'btn btn-default' %>

<% end %>
