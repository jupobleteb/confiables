<%= form_for @categoria, :html => { :class => "form-horizontal categoria" } do |f| %>

    <% if @categoria.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@categoria.errors.count, "error") %> prohibited this categoria from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @categoria.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :categoria_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :categoria_id, :class => 'form-control' %>
    </div>
    <%= error_span(@categoria[:categoria_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :nombre, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nombre, :class => 'form-control' %>
    </div>
    <%= error_span(@categoria[:nombre]) %>
  </div>
  <div class="control-group">
    <%= f.label :descripcion, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :descripcion, :class => 'form-control' %>
    </div>
    <%= error_span(@categoria[:descripcion]) %>
  </div>
  <div class="control-group">
    <%= f.label :laboral_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :laboral_id, :class => 'form-control' %>
    </div>
    <%= error_span(@categoria[:laboral_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            categorias_path, :class => 'btn btn-default' %>

<% end %>
